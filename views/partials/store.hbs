{{#each store.library}}
{{#with data}}
<li class="list__item id--{{../id}}">
  <div class="list__item__img">
    {{#if ../cover}}
    <img src="/store/{{../../cover}}">
    {{else}}
    <img src="/images/cover.png">
    {{/if}}
  </div>
  <div class="list__item__content">
    {{#if title}}<h2 class="list__item__title">{{../title}}</h2>{{/if}}
    
    {{#if creators}}
    <ul class="list__item__authors">
      {{#each creators}}
      {{#if name}}<li class="list__item__author author">{{../name}}</li>{{/if}}
      {{/each}}
    </ul>
    {{/if}}
    
    <div class="list__item__buttons">
      <a href="#/store-item/{{../id}}" class="button">More info</a>
      {{#if (isValueInArray ../../libraryList ../id)}}
      got it
      {{/if}}
    </div>
  </div>
</li>
{{/with}}
{{/each}}