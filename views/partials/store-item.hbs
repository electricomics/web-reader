{{#with item}}
{{#with data}}

<div class="more__item" id="store-{{../id}}">
  <div class="more__item__img">
    {{#if ../cover}}
    <img src="/store/{{../../cover}}">
    {{else}}
    <img src="/images/cover.png">
    {{/if}}
  </div>
  <div class="more__item__content">
    <h2>{{title}}</h2>
    
    <div class="more__item__data">{{../url}}</div>
    <div class="more__item__data">version: {{version}}</div>
    <div class="more__item__data">published: {{publish_date}}</div>
    
    <p class="more__item__summary">{{breaklines summary}}</p>
    {{#if creators}}
    <ul class="more__item__creators">
      {{#each creators}}
      <li class="more__item__creator">
        <span class="role more__item__role">{{role}}:</span>
        <span class="author more__item__author">{{name}}</span>
      </li>
      {{/each}}
    </ul>
    {{/if}}

    <div class="more__item__buttons">
      <input type="button" class="button js-store-item-download" data-url="{{../url}}" value="Download">
      <a href="#/store/{{../id}}" class="button">Back to store</a>
    </div>
  </div>
</div>

{{/with}}
{{/with}}