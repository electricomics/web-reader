{{#each comics}}
{{#with data}}
<h3>{{title}}</h3>
<p>{{summary}}</p>

<img src="/{{slug}}/cover.png" alt="{{title}} cover">

<div>version: {{version}}</div>
<div>published: {{publish_date}}</div>
<div>orientation: {{config.orientation}}</div>

{{#if creators}}
<h4>Creators</h4>
<dl>
  {{#each creators}}
  <dt>{{name}}</dt>
    <dd>{{role}}</dd>
  {{/each}}
</dl>
{{/if}}

<a href="/{{slug}}/">View comic</a>
{{#if ../../internal}}
<button class="open-int" data-id="{{@key}}">View in browser</button>
{{/if}}
{{/with}}
{{/each}}

<script>
$('.open-int').on('click', function(e) {
  e.preventDefault();
  var id = $(this).data('id');
  sendMessage('open-int', { id: id });
});
</script>