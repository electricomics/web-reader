<div class="dialog" id="dialog-error" title="Error">
  <p>Error</p>
</div>

<script>
window.addEventListener('message', function(e) {
  if (e.origin !== 'file://') {
    return false;
  }
  var msg;
  try {
    msg = JSON.parse(e.data);
  }
  catch (err) {
    console.error(err);
    return false;
  }

  receiveMessage(msg);
});
</script>  
</body>
</html>